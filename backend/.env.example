# Environment Configuration Example
# Copy this file to .env and update with your actual values
# IMPORTANT: Never commit .env to version control!

# =============================================
# DATABASE CONFIGURATION
# =============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tutoring_platform
DB_USER=postgres
DB_PASSWORD=your_secure_database_password_here
DB_SSL_MODE=disable

# =============================================
# SERVER CONFIGURATION
# =============================================
SERVER_PORT=8080
ENV=development
PRODUCTION_DOMAIN=

# =============================================
# SESSION & AUTHENTICATION
# =============================================
# CRITICAL: Generate with: openssl rand -base64 48
# NEVER commit real session secret to version control!
# Must be at least 32 characters with mixed case, digits and symbols
# Production requires 48+ characters with ALL 4 character types
# DO NOT use example values - generate a unique secret for each environment
SESSION_SECRET=
SESSION_MAX_AGE=86400
SESSION_SAME_SITE=Lax

# =============================================
# TELEGRAM BOT CONFIGURATION
# =============================================
# Get bot token from BotFather: https://t.me/botfather
# Format: 123456789:ABCDEfghijklmnoPQRSTUvwxyz123456789
# CRITICAL: Keep this token secret! Treat like a password.
# DO NOT commit real token to version control.
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ADMIN_TELEGRAM_ID=your_admin_telegram_id_here

# Webhook configuration (REQUIRED for production)
TELEGRAM_USE_WEBHOOK=true
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/v1/telegram/webhook
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_at_least_32_characters_long

# SOCKS5 proxy for Telegram API (to bypass Russia blocking)
# Format: socks5://host:port or socks5://user:password@host:port
TELEGRAM_PROXY=

# =============================================
# PAYMENT CONFIGURATION (YOOKASSA)
# =============================================
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=
YOOKASSA_RETURN_URL=http://localhost:3000/payment-success

# =============================================
# AI MODERATION (OPTIONAL)
# =============================================
OPENROUTER_API_KEY=

# =============================================
# REDIS (OPTIONAL)
# =============================================
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================
# RATE LIMITING
# =============================================
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_CLEANUP_INTERVAL=30
RATE_LIMIT_INACTIVITY_TIMEOUT=60

# =============================================
# CACHE CONFIGURATION
# =============================================
CACHE_ENABLED=false
CACHE_USE_REDIS=false
CACHE_DEFAULT_TTL=300
CACHE_LESSON_LIST_TTL=1800
CACHE_BROADCAST_TTL=3600
CACHE_USER_PROFILE_TTL=900
CACHE_SESSION_TTL=300

# =============================================
# REDIS CLUSTER CONFIGURATION
# =============================================
REDIS_CLUSTER_ENABLED=false
REDIS_CLUSTER_ADDRS=localhost:7000,localhost:7001,localhost:7002
SESSION_TTL_HOURS=24
