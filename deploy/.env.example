# Environment Configuration Example
# Copy this file to .env and update with your values

# Environment (production, development)
ENV=production

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tutoring_platform
DB_USER=tutoring_user
DB_PASSWORD=your_secure_database_password_here
DB_SSL_MODE=disable

# Server Configuration
SERVER_PORT=8080

# Session Configuration
# Generate with: openssl rand -base64 48
SESSION_SECRET=your_session_secret_at_least_32_characters_long
SESSION_MAX_AGE=86400
SESSION_SAME_SITE=Strict

# Production Domain for Telegram Webhook
PRODUCTION_DOMAIN=your-domain.com

# =============================================
# TELEGRAM BOT CONFIGURATION
# =============================================
# Get bot token from BotFather: https://t.me/botfather
# Format: 123456789:ABCDEfghijklmnoPQRSTUvwxyz123456789
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ADMIN_TELEGRAM_ID=your_admin_telegram_id_here

# Webhook configuration (REQUIRED for production)
TELEGRAM_USE_WEBHOOK=true
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/v1/telegram/webhook
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_at_least_32_characters_long
TELEGRAM_PROXY=

# Optional: Email Notifications
# ADMIN_EMAIL=admin@example.com

# Optional: Remote Backup Configuration (S3)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# S3_BUCKET=your-backup-bucket
# S3_REGION=us-east-1
